<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="5dp"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textStyle="bold"
            android:layout_weight="1"
            android:textSize="@dimen/dimen_letra_app_titulo"
            android:text="Id solicitud"
            android:id="@+id/txtIdSolicitud" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Id Punto de venta"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:layout_weight="1"
            android:textSize="@dimen/dimen_letra_app_titulo"
            android:id="@+id/txtIdPos"
            android:gravity="right" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha: 21/05/2016"
            android:layout_weight="1"
            android:id="@+id/txtFecha" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Modificado"
            android:layout_weight="1"
            android:id="@+id/txtSolicitud"
            android:gravity="right" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del punto de venta"
        android:layout_marginBottom="5dp"
        android:id="@+id/txtNombrePunto" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombre del vendedor"
        android:id="@+id/txtNombreVendedor" />

</LinearLayout>